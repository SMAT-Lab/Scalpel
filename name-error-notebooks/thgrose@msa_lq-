    "def update(attrname,old,new):\n",
    "    lqdf_agg=lqdf[(lqdf['agglvl_title']==agglvl_select.value)&(lqdf['area_title']==geo_select.value)]\n",
    "    source.data=dict(\n",
    "        x=lqdf_agg['msa_lq'],\n",
    "        y=lqdf_agg['annual_avg_emplvl'],\n",
    "        desc=lqdf_agg['industry_title'],\n",
    "        )"
   ]
  },
